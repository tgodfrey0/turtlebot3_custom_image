{
  "variables": {
    "NAME": "",
    "VERSION": "",
    "SKIP_COMPRESSION": "false",
    "OPENCR_MODEL": "",
    "TURTLEBOT3_MODEL": "",
    "ADD_CONNECTION": "false",
    "NETWORKS": "[]",
    "USERNAME": "robot",
    "USER_PASSWORD": "turtlebot3",
    "LIDAR": "LDS-02",
    "BUILD_SUBDIR": "",
    "SOURCE_IMAGE_PATH": "",
    "IMAGE_CHECKSUM": "",
    "IMAGE_SIZE": "10G",
    "BOOT_SIZE": "256M"
  },
  "builders": [
    {
      "type": "arm",
      "file_urls": [
        "/build/{{user `SOURCE_IMAGE_PATH`}}"
      ],
      "file_checksum": "{{user `IMAGE_CHECKSUM`}}",
      "file_checksum_type": "sha256",
      "file_target_extension": "xz",
      "file_unarchive_cmd": ["xz", "--decompress", "$ARCHIVE_PATH"],
      "image_build_method": "resize",
      "image_size": "{{user `IMAGE_SIZE`}}",
      "image_path": "build/{{user `BUILD_SUBDIR`}}/{{user `NAME`}}-{{user `OPENCR_MODEL`}}-image-{{user `VERSION`}}.img",
      "image_type": "dos",
      "image_partitions": [
        {
          "name": "boot",
          "type": "c",
          "start_sector": "8192",
          "filesystem": "vfat",
          "size": "{{user `BOOT_SIZE`}}",
          "mountpoint": "/boot"
        },
        {
          "name": "root",
          "type": "83",
          "start_sector": "526336",
          "filesystem": "ext4",
          "size": "0",
          "mountpoint": "/"
        }
      ],
      "image_chroot_env": [
        "PATH=/usr/local/bin:/usr/local/sbin:/usr/bin:/usr/sbin:/bin:/sbin"
      ],
      "qemu_binary_source_path": "/usr/bin/qemu-arm-static",
      "qemu_binary_destination_path": "/usr/bin/qemu-arm-static"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "environment_vars": [
        "DEBIAN_FRONTEND=noninteractive",
        "NEEDRESTART_MODE=a",
        "OPENCR_MODEL={{user `OPENCR_MODEL`}}",
        "TURTLEBOT3_MODEL={{user `TURTLEBOT3_MODEL`}}",
        "ADD_CONNECTION={{user `ADD_CONNECTION`}}",
        "NETWORKS={{user `NETWORKS`}}",
        "USERNAME={{user `USERNAME`}}",
        "USER_PASSWORD={{user `USER_PASSWORD`}}",
        "LIDAR={{user `LIDAR`}}"
      ],
      "scripts": ["scripts/00_setup_user.sh"]
    },
    {
      "type": "shell",
      "inline": ["mkdir -p /home/{{user `USERNAME`}}/setup_scripts/"]
    },
    {
      "type": "file",
      "source": "files/scripts/",
      "destination": "/home/{{user `USERNAME`}}/setup_scripts"
    },
    {
      "type": "file",
      "source": "files/services/",
      "destination": "/etc/systemd/system"
    },
    {
      "type": "shell",
      "environment_vars": [
        "USERNAME={{user `USERNAME`}}"
      ],
      "inline": [
        "find /home/$USERNAME/setup_scripts /etc/systemd/system -type f -exec sed -i \"s|/home/robot|/home/$USERNAME|g\" {} +",
        "find /home/$USERNAME/setup_scripts /etc/systemd/system -type f -exec sed -i \"s|USERNAME=robot|USERNAME=$USERNAME|g\" {} +",
        "find /home/$USERNAME/setup_scripts -name '*.sh' -exec chmod +x {} +"
      ]
    },
    {
      "type": "shell",
      "environment_vars": [
        "DEBIAN_FRONTEND=noninteractive",
        "NEEDRESTART_MODE=a",
        "OPENCR_MODEL={{user `OPENCR_MODEL`}}",
        "TURTLEBOT3_MODEL={{user `TURTLEBOT3_MODEL`}}",
        "ADD_CONNECTION={{user `ADD_CONNECTION`}}",
        "NETWORKS={{user `NETWORKS`}}",
        "USERNAME={{user `USERNAME`}}",
        "USER_PASSWORD={{user `USER_PASSWORD`}}",
        "LIDAR={{user `LIDAR`}}"
      ],
      "scripts": [
        "scripts/01_set_dns.sh",
        "scripts/10_packages.sh",
        "scripts/20_setup_hostname_service.sh",
        "scripts/30_general_system_setup.sh",
        "scripts/40_install_ros_humble.sh",
        "scripts/50_turtlebot3_setup.sh",
        "scripts/60_opencr_setup.sh",
        "scripts/70_setup_camera.sh",
        "scripts/80_add_connection.sh"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "shell-local",
      "inline": [
        "if [ \"{{user `SKIP_COMPRESSION`}}\" != \"true\" ]; then",
        "xz -f -v -T0 \"build/{{user `BUILD_SUBDIR`}}/{{user `NAME`}}-{{user `OPENCR_MODEL`}}-image-{{user `VERSION`}}.img\"",
        "fi"
      ]
    }
  ]
}
